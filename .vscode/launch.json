    "version": "0.2.0",
    "configurations": [
        {
            "name": "Extension Tests",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}",
                "--extensionTestsPath=${workspaceFolder}/js/test/suite/index.js"
            ],
            "outFiles": [
                "${workspaceFolder}/js/test/suite/**/*.js"
            ],
            "preLaunchTask": "npm: watch"
        }

    ]
}
